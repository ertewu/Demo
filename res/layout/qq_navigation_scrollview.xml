            <zystudio.demo.NavigationItemView
                android:id="@+id/itemview_2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" >
            </zystudio.demo.NavigationItemView>

            <zystudio.demo.NavigationItemView
                android:id="@+id/itemview_3"
                android:layout_width="match_parent"
